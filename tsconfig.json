{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "removeComments": true,
		"noImplicitAny": true,
        "sourceMap": true,
        "inlineSources": true,
        "isolatedModules": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
        "allowJs": true,
        "rootDir": "src"
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
		"images"
    ]
}
