{
    "name": "vscode-antlr4",
    "displayName": "ANTLR4 grammar syntax support",
    "description": "Language support for ANTLR4 grammar files",
    "icon": "antlr-logo.png",
    "version": "0.3.1",
    "publisher": "mike-lischke",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/mike-lischke/vscode-antlr4"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:antlr"
    ],
    "main": "./extension",
    "contributes": {
        "languages": [
            {
                "id": "antlr",
                "aliases": [
                    "ANTLR",
                    "antlr"
                ],
                "extensions": [
                    ".g",
                    ".g4"
                ],
                "firstLine": "^(lexer|parser)?\\s*grammar\\s*\\w+\\s*;",
                "configuration": "./antlr.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "antlr",
                "scopeName": "source.antlr",
                "path": "./syntaxes/antlr.json"
            }
        ],
        "themes": [
            {
                "label": "Complete Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/complete_dark.json"
            },
            {
                "label": "Complete Light",
                "uiTheme": "vs",
                "path": "./themes/complete_light.json"
            }
        ]
    },
    "scripts": {
        "compile": "cd ./node_modules/antlr4-graps/ && node-gyp rebuild -j 8 && cd -",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "antlr4-graps": "*"
    },
    "devDependencies": {
        "vscode": "^0.11.0"
    }
}